<html>
  <head>
    <meta charset='utf-8'>
    <link rel='stylesheet' href='./style.css'>
    <title>Makers BnB</title>
  </head>
  <body>
  <header>
    <h1>Booking Requests</h1>
  </header>
   <div id = 'container'>
      <%@bookings.each do |booking| %>
      <div id = 'booking'>
       <br>
        <span>There is a request for the following property: <%=booking[:name]%></span>
        <br>
        <span>from: <%=booking[:start_date]%></span>
        <br>
        <span>until: <%=booking[:end_date]%></span>
        <br>
        <span><%=booking[:comments]%></span>
        <br>
        <%if booking[:confirmed] == 'n' %>
          <form action = '/confirm_booking/<%=booking[:booking_id]%>' method=post>
            <input type=submit value='Confirm'>
          </form>
        <%else%>
          Confirmed
        <%end%>
      </div>
      <%end%>
      <br>
      <form action="/view_properties">
        <input type="submit" value="back" name='back'/>
    </form>
  </body>
  </html>
